<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcherakoleihlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcherakoleihlogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AkolEih"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name=".splash.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity should NOT have launcher intent filter -->
        <activity
            android:name=".NavigationActivity"
            android:exported="false" />  <!-- Changed to false since it's not an entry point -->
        <activity android:name=".auth.view.SignUpActivity" android:exported="true" />
        <activity android:name=".auth.view.LoginActivity" android:exported="true" />

    </application>
</manifest>