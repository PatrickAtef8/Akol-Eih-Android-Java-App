<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Add this inside the <resources> tag -->
    <style name="ShapeAppearanceOverlay.CornerSize16" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ImageRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="ImageRoundedSmallCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="TopRoundedImageCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AppSnackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/snackbar_background</item>
        <item name="android:textColor">@color/snackbar_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="TopRoundedImageCornersdetails" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DialogFragmentTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- res/values/themes.xml -->
    <style name="Theme.MyApp.Dialog.Alert"
        parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- 100% white surface -->
        <item name="android:colorBackgroundFloating">@color/white</item>
        <!-- shared rounded-28dp shape -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyApp.Rounded28dp</item>
        <!-- default on-surface text -->
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <!-- use Material3 TextButton style -->
        <item name="buttonStyle">@style/Widget.Material3.Button.TextButton.Dialog</item>
    </style>

    <style name="ShapeAppearance.MyApp.Rounded28dp"
        parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">28dp</item>
    </style>



</resources>