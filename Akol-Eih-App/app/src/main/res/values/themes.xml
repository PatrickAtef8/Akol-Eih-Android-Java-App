<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AkolEih" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryContainer">@color/teal_100</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_50</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/gray_50</item>

        <!-- Text colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <item name="colorOnSurfaceVariant">@color/gray_600</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.AkolEih.Button</item>

        <!-- Text field styles -->
        <item name="textInputStyle">@style/Widget.AkolEih.TextInputLayout.OutlinedBox</item>

        <!-- Enable edge-to-edge display -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.AkolEih" parent="Base.Theme.AkolEih" />

    <!-- Custom Button Style -->
    <style name="Widget.AkolEih.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@anim/button_state_list_animator</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.AkolEih.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>